@model IEnumerable<MenuManagementMVC.Models.UserDefined.Recipe>
@using MenuManagementMVC.App_Code
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RecipeName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RecipeDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RecipeServes)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RecipeMethod)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RecipeImageURL)
        </th>
     
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.RecipeName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RecipeDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RecipeServes)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RecipeMethod)
        </td>
        <td>
            @*@Html.DisplayFor(modelItem => item.RecipeImageURL)*@
            <img src="@(String.Format("{0}{1}",clsStatic.RECIPE_IMAGES_PATH, item.RecipeImageURL))" alt="" height=100 width=100 />
            @*<img src="/Uploads/RecipeImages/@item.RecipeImageURL" alt="" height=200 width=200 />*@
        </td>
  
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.RecipeId }) |
            @Html.ActionLink("Details", "Details", new { id=item.RecipeId }) |
            @Html.ActionLink("Delete", "Delete", 
                            new { id=item.RecipeId },
                            new { onclick = "return confirm('Are you sure you wish to delete this record?');" })

            @*@using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-default" />
                </div>
            }*@
        </td>
    </tr>
}

</table>
